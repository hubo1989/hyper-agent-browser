{
  "name": "hyper-browser-agent",
  "version": "0.1.0",
  "description": "Pure browser automation CLI for AI Agents",
  "type": "module",
  "bin": {
    "hba": "src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build --compile --minify src/cli.ts --outfile dist/hba",
    "build:all": "bun run scripts/build-all.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": ["browser-automation", "cli", "ai-agent", "playwright", "patchright"],
  "author": "Hubert",
  "license": "MIT",
  "dependencies": {
    "patchright": "^1.55.1",
    "commander": "^12.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
